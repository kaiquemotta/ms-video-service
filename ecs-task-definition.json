{
  "family": "video-task",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "video-app",
      "image": "<IMAGE_URI>",  // será substituído no GitHub Actions
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        }
      ],
      "essential": true,
      "environment": [
        { "name": "AWS_ACCESS_KEY_ID", "value": "<AWS_ACCESS_KEY_ID>" },
        { "name": "AWS_SECRET_ACCESS_KEY", "value": "<AWS_SECRET_ACCESS_KEY>" },
        { "name": "MONGO_USER", "value": "<MONGO_USER>" },
        { "name": "MONGO_PASSWORD", "value": "<MONGO_PASSWORD>" },
        { "name": "SQS_QUEUE_URL", "value": "<SQS_QUEUE_URL>" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/video-task",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::<YOUR_ACCOUNT_ID>:role/ecsTaskExecutionRole"
}
