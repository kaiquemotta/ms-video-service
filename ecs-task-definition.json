{
  "family": "video-task",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "video-app",
      "image": "REPLACE_ME_IMAGE_URI",
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/video-task",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        { "name": "AWS_ACCESS_KEY_ID", "value": "" },
        { "name": "AWS_SECRET_ACCESS_KEY", "value": "" },
        { "name": "MONGO_USER", "value": "" },
        { "name": "MONGO_PASSWORD", "value": "" },
        { "name": "SQS_QUEUE_URL", "value": "" }
      ]
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024"
}
